<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/receipt_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-condensed"
        android:text="돼지고기"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/receipt_total_money"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/receipt_total_money"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-condensed"
        android:text="36,000"
        app:layout_constraintBaseline_toBaselineOf="@id/receipt_menu"
        app:layout_constraintLeft_toRightOf="@id/receipt_menu"
        app:layout_constraintRight_toLeftOf="@id/receipt_my_money"
        app:layout_constraintWidth_percent="0.25"
        />

    <TextView
        android:id="@+id/receipt_my_money"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-condensed"
        android:text="12,000"
        app:layout_constraintBaseline_toBaselineOf="@id/receipt_menu"
        app:layout_constraintLeft_toRightOf="@id/receipt_total_money"
        app:layout_constraintRight_toLeftOf="@id/receipt_num_of_people_selected"
        app:layout_constraintWidth_percent="0.25"
        />

    <TextView
        android:id="@+id/receipt_num_of_people_selected"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-condensed"
        android:text="3/3"
        app:layout_constraintBaseline_toBaselineOf="@id/receipt_menu"
        app:layout_constraintLeft_toRightOf="@id/receipt_my_money"
        app:layout_constraintRight_toLeftOf="@id/recent_calc_ckbox"
        app:layout_constraintWidth_percent="0.2"
        />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/recent_calc_ckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="5dp"
        android:minHeight="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/receipt_num_of_people_selected"
        app:layout_constraintLeft_toRightOf="@id/receipt_num_of_people_selected"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>