<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_itembox"
    android:backgroundTint="#FCE1FF"
    android:clickable="true"
    android:focusable="true"
    android:padding="15dp">


    <TextView
        android:id="@+id/group_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2022-09-23"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/group_item_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OOO, OOO, OOO 외 3명"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/group_item_date"
        tools:layout_editor_absoluteX="13dp" />

    <TextView
        android:id="@+id/group_item_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정산 진행중.."
        android:textAlignment="textEnd"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/group_item_names"
        tools:layout_editor_absoluteX="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>